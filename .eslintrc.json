{
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "jasmine": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "brace-style": "off",
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": [
          "Polymer",
          "Polymer.GestureEventListeners"
        ]
      }
    ],
    "no-var": "error",
    "no-console": "off",
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": false
        }
      }
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ]
  },
  "globals": {
    "Polymer": true,
    "fixture": true,
    "MockInteractions": true,
    "WCT": true
  }
}
